<li id="section-<%= section.id %>">
  <%= link_to_remote image_tag('/images/icons/trash.gif', :class => 'iconb red'), {
  :url => {
    :controller => 'sections', 
    :action => 'remove', 
    :id => section}, 
    :confirm => "Are you sure?"}, 
    :class => 'aicon' %>
    
