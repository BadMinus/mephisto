<h1>Unapproved Comments for '<%=h @article.title %>'</h1>

<% @article.unapproved_comments.each do |comment| -%>
<div id="comment-<%= comment.id %>">
  <p><%= truncate comment.body, 255 %></p>
  <p>By <%= author_link_for comment %><%= %( (#{comment.author_email})) unless comment.author_email.blank? %></p>
  <p><%= link_to_remote 'Approve!', :url => { :action => 'approve', :id => @article, :comment => comment } %></p>
</div>
<% end -%>
