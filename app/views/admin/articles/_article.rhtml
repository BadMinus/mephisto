<tr class="<%= article.status %>" id="article_<%= article.id %>">
  <td><%= image_tag flag_status[article.status], :size => '16x16', :alt => "this article is #{article.status}" %></td>
  <td class="article_title"><%= link_to h(article.title), article_url(article.hash_for_permalink) %></td>
  <td><span class="date"><%= article.published? ? article.published_at.to_s(:db) : "not published" %></span></td>
</tr>