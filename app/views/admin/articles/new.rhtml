<% content_for :action_nav do -%>
  <div id="page-nav"></div>
<% end %>

<% content_for :form do -%>
  <%= start_form_tag({:action => 'create'}, {:id => 'article-form'}) %>
<% end -%>

<% fields_for :article do |f| -%>
  <%= render :partial => 'form', :object => f %>
  
  <p class="btns">
    <%= submit_tag 'Save Article' %> or 
    <%= link_to "cancel", :controller => "articles" %>
  </p>
<% end -%>
