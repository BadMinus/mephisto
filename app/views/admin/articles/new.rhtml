<h2>Creating a new article</h2>
<% form_for :article, @article, :url => { :action => 'create' }, :html => {:id => 'article-form'} do |f| -%>
  <%= render :partial => 'form', :object => f %>
  
  <p class="btns">
    <%= create_button_tag %>
    <%= draft_button_tag %> or 
    <%= link_to "cancel", :controller => "articles" %>
  </p>
<% end -%>