<li id="<%= user.dom_id %>" class="clear<%= %( deleted) unless user.deleted_at.nil? %><%= %( selected) if @user == user %>">
    <%= avatar_for user %>
    <h3><%= link_to user.login, :action => 'show', :id => user %></h3>
    <%= user.email %>
<%= render :partial => "toggles", :locals => { :user => user } %>
</li>