<li class="event-article<%= " shade" if defined?(shaded) && shaded == true %>">
  <span class="event-time"><%= event_time_for event, later %></span>
  <%= link_to h(event.title), :controller => 'articles', :action => 'edit', :id => event.article_id %> was published.
  <span class="meta">by <%= link_to event.user.login, :controller => 'users', :action => 'show', :id => event.user.login %></span>
</li>