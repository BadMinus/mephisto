<html>
<head>
  <title>Mephisto: <%= controller.controller_name %></title>
  <%= stylesheet_link_tag 'mephisto' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>

<div id="wrapper">
  <div id="header">
    <div id="title">mephisto.</div>
<% if logged_in? -%>
    <ul>
      <li><%= link_to 'articles',   :controller => '/admin/articles' %></li>
      <li><%= link_to 'pages',      :controller => '/admin/pages' %></li>
      <li><%= link_to 'categories', :controller => '/admin/categories' %></li>
      <li><%= link_to 'templates',  :controller => '/admin/templates' %></li>
    </ul>
<% end -%>
  </div>
<% if flash[:notice] -%>
  <div id="flash"><%= flash[:notice] %></div>
<% end -%>

  <div id="main" class="c">
<%= yield %>
  </div>
</div>
</body>
</html>
